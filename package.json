{
  "name": "lim-hyejung-portfolio",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.2",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:packages": "turbo run build --filter=./packages/*",
    "start": "next start",
    "lint": "next lint",
    "preprocess": "node scripts/preprocess-data.js",
    "validate": "node scripts/validate-data.js",
    "analyze": "node scripts/analyze-translations.js",
    "data:check": "npm run preprocess && npm run validate",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "test:visual:ui": "playwright test --ui",
    "test:visual:report": "playwright show-report",
    "pdf:diptych": "node scripts/generate-pdf.js -u /postcards/diptych -o diptych.pdf -s 12x4",
    "pdf:diptych:both": "node scripts/generate-pdf.js -u /postcards/diptych -o diptych-both.pdf -s 12x4 -m both",
    "pdf:catalog": "node scripts/generate-pdf.js -u /catalog -o catalog.pdf -s 8.75x8.75",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.11.1",
    "@neondatabase/serverless": "^1.0.2",
    "drizzle-orm": "^0.45.1",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "lucide-react": "^0.303.0",
    "next": "14.0.4",
    "next-auth": "5.0.0-beta.30",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/file-saver": "^2.0.7",
    "@types/jszip": "^3.4.0",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "drizzle-kit": "^0.31.8",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "image-size": "^2.0.2",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.0",
    "tsup": "^8.0.1",
    "turbo": "^2.3.4",
    "typescript": "^5.3.3"
  }
}
